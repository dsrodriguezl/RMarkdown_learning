
@article{rodriguezleonVariacionAbundanciaRelativa2019,
  title = {Variación de La Abundancia Relativa de Perros En Un Gradiente de Presencia Humana En Dos Reservas Privadas ({{Tabio}}, {{Cundinamarca}})},
  author = {Rodríguez León, Daniel Sebastián and López Arévalo, Hugo Fernando},
  date = {2019-05-01},
  journaltitle = {Acta Biológica Colombiana},
  shortjournal = {Acta biol. Colomb.},
  volume = {24},
  number = {2},
